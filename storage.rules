rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the path
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Assessment results - authenticated users (admins) can upload and read
    match /assessment_results/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // User uploads - owner can read/write
    match /users/{userId}/uploads/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }
    
    // User profile images - owner can write, anyone authenticated can read
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Legacy/App profile images path
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Agency profile images
    match /agencies/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Course content assets (e.g., cover images)
    // Authenticated users can read. Writes limited to authenticated users.
    match /courses/{courseId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Public assets - anyone can read
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admins
    }
    
    // Video uploads - authenticated users (admins) can upload and read
    match /video/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Document uploads - authenticated users (admins) can upload and read
    match /document/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Thumbnails used by courses/videos
    match /thumbnail/{allPaths=**} {
      allow read: if true; // thumbnails are safe to cache publicly
      allow write: if isAuthenticated();
    }

    // Forum comment attachments
    match /forum_comments/{forumId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Chat media attachments
    match /chat_media/{chatId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Content/Course comment attachments
    match /content_comments/{courseId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Global size limit for uploads
    // Apply only if a more specific match above does not override.
    // Also require authentication to avoid public writes to unspecified paths.
    allow write: if isAuthenticated() && request.resource.size < 20 * 1024 * 1024 * 1024; // 20GB
  }
}